<%- include('../partials/header'); %>

    <div class="container">
        <div class="page-header">
            <h1>Add a Service</h1>
        </div>
        <form action="/dashboard/add" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="row">
                <div class="col s12 m7 l8">
                    <div class="input-field">
                        <label for="title">Title</label>
                        <input type="text" name="title" id="title" class="validate">
                    </div>
                </div>
                <div class="col s12 m5 l4">
                    <div class="input-field">
                        <select name="category" id="category">
                            <option value="" disabled selected>Choose a category</option>
                            <% categories.forEach( function(category) { %>
                            <option value="<%= category.name %>"><%= category.name %></option>
                            <% }); %>
                        </select>
                        <label for="category">Category</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <div class="input-field">
                        <input type="url" name="cover" id="cover" class="validate">
                        <label for="cover">Cover Image</label>
                        <div class="helper-text">URL of an image you want to use as cover for the service.</div>
                    </div>
                </div>
                <div class="col s12">
                    <div class="input-field">
                        <textarea name="description" id="description" class="materialize-textarea"></textarea>
                        <label for="description">Description</label>
                        <div class="helper-text">Write about what you are offering. Keep it concise and organized.</div>
                    </div>
                </div>
                <div class="col s12">
                    <div class="input-field">
                        <textarea name="requirements" id="requirements" class="materialize-textarea"></textarea>
                        <label for="requirements">Requirements</label>
                        <div class="helper-text">List what you need to do this task.</div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col s12 m8">
                    <div class="input-field">
                        <input type="text" name="tags" id="tags" class="">
                        <label for="tags">Tags</label>
                        <div class="helper-text">Add tags with comma and space between them. You can add maximum of 4.</div>
                    </div>
                </div>
                <div class="col s12 m2">
                    <div class="input-field">
                        <input type="number" name="price" id="price" class="validate">
                        <label for="price">Price</label>
                    </div>
                </div>
                <div class="col s12 m2">
                    <div class="input-field">
                        <select name="currency" id="currency">
                            <option value="SBD">SBD</option>
                            <option value="STEEM">STEEM</option>
                        </select>
                        <label for="currency">Currency</label>
                    </div>
                </div>
                <div class="col s12">
                    <button type="submit" class="btn waves-effect waves-light">Submit <i class="material-icons right">send</i></button>
                </div>
            </div>
        </form>
    </div>

<%- include('../partials/footer'); %>
